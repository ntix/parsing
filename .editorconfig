# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
insert_final_newline = false
max_line_length = off
trim_trailing_whitespace = false

[*.ts]
quote_type = single
max_line_length = 120

[*.html]
html_pi_attribute_style=do_not_touch

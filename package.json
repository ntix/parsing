{
  "name": "@ntix/parsing",
  "version": "1.0.2",
  "description": "a small parser",
  "repository": {
    "url": "https://github.com/ntix/parsing",
    "type": "git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "barrels": "barrelsby -q --delete --directory src --include \\.ts$ --exclude \"(\\.spec|this)\\.ts$\" --location all",
    "prebuild": "npm run clean && npm run barrels",
    "build": "tsc && rollup -c rollup.config.ts",
    "build.docs": "npm run build && typedoc --exclude \"**/*+(index|.spec|.e2e).ts\" --out docs src --readme docs.md --media dist",
    "clean": "shx rm -rf dist",
    "format": "eslint src --fix",
    "pretest": "npm run barrels",
    "test": "jest",
    "test.debug": "jest --runInBand",
    "test.watch": "jest --watchAll",
    "start": "npm run build.docs && serve docs",
    "commit": "git add . && npx git-cz",
    "prepublishOnly": "npm run build.docs",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "parse",
    "parser",
    "parsing",
    "schema parsing",
    "validate",
    "validating",
    "validation",
    "schema validation"
  ],
  "author": "Anthony Johnston <npm@antix.co.uk> (http://antix.co.uk)",
  "license": "MIT",
  "devDependencies": {
    "@antfu/eslint-config": "^0.41.0",
    "@rollup/plugin-typescript": "^11.1.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "barrelsby": "^2.8.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "rollup": "^3.28.1",
    "semantic-release": "^21.1.1",
    "serve": "^14.2.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": false,
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleNameMapper": {
      "(.*)\\.js": "$1"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
